<resources>

    <!-- Base application theme. -->
    <style name="AppLightTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">#ccc555</item>
        <item name="android:statusBarColor">@color/styledBackgroundColorLight</item>
        <item name="styledTintColor">@color/styledTintColorLight</item>
        <item name="styledBackgroundColor">@color/styledBackgroundColorLight</item>
        <item name="styledTextColor">@color/styledTextColorLight</item>
        <item name="styledDarkShadowColor">@color/default_shadow_dark_light</item>
        <item name="styledLightShadowColor">@color/default_shadow_light_light</item>
        <item name="styledCardBackgroundColor">@color/styledCardBackgroundColorLight</item>
        <item name="android:windowAnimationStyle">@style/WindowTransAnim</item>
        <!--        <item name="android:windowAnimationStyle">@style/WindowTransWithoutAnim</item>-->
    </style>

    <style name="AppDarkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">#586A1E</item>
        <item name="colorPrimaryDark">#B30077</item>
        <item name="colorAccent">#000000</item>
        <item name="styledTintColor">@color/styledTintColor</item>
        <item name="android:statusBarColor">@color/styledBackgroundColor</item>
        <item name="styledBackgroundColor">@color/styledBackgroundColor</item>
        <item name="styledTextColor">@color/styledTextColor</item>
        <item name="styledDarkShadowColor">@color/default_shadow_dark_dark</item>
        <item name="styledLightShadowColor">@color/default_shadow_light_dark</item>
        <item name="styledCardBackgroundColor">@color/styledCardBackgroundColor</item>
        <item name="android:windowAnimationStyle">@style/WindowTransWithoutAnim</item>
        <!--        <item name="android:windowAnimationStyle">@style/WindowTransAnim</item>-->
    </style>

    <style name="WindowTransAnim">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="WindowTransWithoutAnim">
        <item name="android:windowEnterAnimation">@null</item>
        <item name="android:windowExitAnimation">@null</item>
    </style>

</resources>
